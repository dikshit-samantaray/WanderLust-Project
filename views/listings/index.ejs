<% layout("/layouts/boilerplate") %>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    gap: 30px;
    margin-bottom: 5px;
    align-items: center;
  }
  .filter {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    /* opacity: 0.7; */
    margin-top: 1rem;
    margin-bottom: 1rem;
  }
  /* .filter:hover {
    opacity: 1;
    cursor: pointer;
  } */
  .filter i {
    font-size: 18px;
    margin-bottom: 5px;
  }

  .filter p {
    margin: 0;
    font-size: 12px;
  }

  #filters a {
    text-decoration: none;
    color: inherit;
  }

  /* #filters a:hover{
    color
  } */

  .tax-info {
    display: none;
  }
  .tax-toggle {
    border: 1.5px solid black;
    border-radius: 0.7rem;
    height: 3.5rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    margin-left: 2rem;
  }

  /* Customize the switch when checked */
  input[type="checkbox"].form-check-input:checked {
    background-color: #000000; /* Example: green */
    border-color: #000000;
  }

  /* Optional: Change the appearance of the toggle knob */
  input[type="checkbox"].form-check-input:focus {
    box-shadow: 0 0 0 0.25rem rgba(0, 0, 0, 0.25); /* Match your color */
  }
  .category-icon .filter i {
    opacity: 0.6;
    transition: opacity 0.2s ease;
  }

  /* On hover */
  .category-icon:hover .filter i {
    opacity: 1;
  }

  /* When active (selected) */
  .category-icon.active .filter i {
    opacity: 1;
    color: black !important; /* optional */
    cursor: pointer;
  }
  .category-icon {
    text-decoration: none;
  }

  .category-icon .filter {
    text-align: center;
    border-bottom: 2px solid transparent;
    padding-bottom: 3px;
    transition: border-color 0.2s ease;
  }

  /* Hover underline */
  .category-icon:hover .filter {
    border-bottom: 3px solid rgba(0, 0, 0, 0.5);
    opacity: 0.8;
  }

  /* Active underline */
  .category-icon.active .filter {
    border-bottom: 3px solid rgba(0, 0, 0, 1);
  }
</style>
<form action="/listings" method="GET">
  <input type="hidden" name="category" />
  <div id="filters">
    <a
      href="/listings/cat/Trending"
      class="category-icon <%= category === 'Trending' ? 'active' : '' %>"
    >
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
    </a>

    <a
      href="/listings/cat/Rooms"
      class="category-icon <%= category === 'Rooms' ? 'active' : '' %>"
      ><div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div></a
    >

    <a
      href="/listings/cat/Castles"
      class="category-icon <%= category === 'Castles' ? 'active' : '' %>"
      ><div class="filter">
        <div><i class="fa-solid fa-chess-rook"></i></div>
        <p>Castles</p>
      </div></a
    >
    <a
      href="/listings/cat/AmazingPools"
      class="category-icon <%= category === 'AmazingPools' ? 'active' : '' %>"
    >
      <div class="filter">
        <div><i class="fa-solid fa-water-ladder"></i></div>
        <p>Amazing pools</p>
      </div></a
    >
    <a
      href="/listings/cat/IconicCities"
      class="category-icon <%= category === 'IconicCities' ? 'active' : '' %>"
    >
      <div class="filter">
        <div><i class="fa-solid fa-city"></i></div>
        <p>Iconic cities</p>
      </div></a
    >
    <a
      href="/listings/cat/Mountains"
      class="category-icon <%= category === 'Mountains' ? 'active' : '' %>"
    >
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Mountains</p>
      </div></a
    >
    <a
      href="/listings/cat/Camping"
      class="category-icon <%= category === 'Camping' ? 'active' : '' %>"
      ><div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div></a
    >

    <a
      href="/listings/cat/Beach"
      class="category-icon <%= category === 'Beach' ? 'active' : '' %>"
      ><div class="filter">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach</p>
      </div></a
    >
    <a
      href="/listings/cat/Arctic"
      class="category-icon <%= category === 'Arctic' ? 'active' : '' %>"
      ><div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </div></a
    >
    <a
      href="/listings/cat/Golfing"
      class="category-icon <%= category === 'Golfing' ? 'active' : '' %>"
    >
      <div class="filter">
        <div><i class="fa-solid fa-golf-ball-tee"></i></div>
        <p>Golfing</p>
      </div></a
    >

    <a
      href="/listings/cat/Boats"
      class="category-icon <%= category === 'Boats' ? 'active' : '' %>"
      ><div class="filter">
        <div><i class="fa-solid fa-sailboat"></i></div>
        <p>Boats</p>
      </div></a
    >
    <a
      href="/listings/cat/Lakes"
      class="category-icon <%= category === 'Lakes' ? 'active' : '' %>"
      ><div class="filter">
        <div><i class="fa-solid fa-water"></i></div>
        <p>Lakes</p>
      </div></a
    >

    <a
      href="/listings/cat/Farms"
      class="category-icon <%= category === 'Farms' ? 'active' : '' %>"
      ><div class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div></a
    >

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="switchCheckDefault"
        />
        <label class="form-check-label" for="switchCheckDefault"
          >Display total after taxes</label
        >
      </div>
    </div>
  </div>
</form>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %><br /></b>
          &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") :
          "N/A" %>/night
          <i class="tax-info">&nbsp;&nbsp;<b>+18% GST</b></i>
        </p>
      </div>
    </div>
  </a>

  <% } %>
</div>

<script>
  let taxToggle = document.getElementById("switchCheckDefault");
  taxToggle.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>

<script>
  function submitCategory(category) {
    const input = document.getElementById("categoryInput");
    input.value = category;
    document.getElementById("categoryForm").submit();
  }
</script>
